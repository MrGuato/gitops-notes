---
import "../styles/global.css";
const { title = "GitOps Notes" } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>

  <body>
    <div class="nav">
      <div class="nav-inner">
        <div class="brand"><a href="/">MrGuato's GitOps Notes</a></div>
        <div>
          <a href={`${base}/`}>GitOps Notes</a>
          <a href={`${base}/writing`}>Writing</a>
          <a href={`${base}/about`}>About</a>
        </div>
      </div>
    </div>

    <main class="container">
      <slot />
      <div class="footer">  Built on GitHub Pages. Built by Jonathan with love ❤️. If it’s not committed, it doesn’t exist.</div>
    </main>
  </body>
</html>
